@model VirtualVendingMachine.Data.DTO.CoinsWithPiecesDto
@{
    ViewBag.Title = "AddCoins";
}
@using (Html.BeginForm("Add", "Coins", FormMethod.Post, new {dto = Model}))
{
    <h2>Add Coins</h2>

 for (var i = 0; i < Model.Coins.Count; i++)
 {
     @Html.HiddenFor(m => Model.Coins[i].CurrencyId)
     <div class="row form-group">
         <label class="col-md-3">
             @Model.Coins[i].CurrencyName :
         </label>

         @Html.EditorFor(m => Model.Coins[i].Pieces, new {htmlAttributes = new {@class = "form-control col-md-1"}})
         
     </div>
    }
    <div class="btn-group">
        <input type="submit" class="btn btn-default" value="Save"/>
        <a class="btn btn-default" href="@Url.Action("Index", "Coins", new {area = "Admin"})">Cancel</a>
    </div>
}